<div class="container">
<br>
<div class="card">
  <div class="card-header">
    Sign Up Form
  </div>
</div>

<br>
<form action="/api/restaurants/users/signin" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter Username">
    <small id="emailHelp" class="form-text text-muted">We'll never share your details with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">Sign Up</button>
  <a href="/api/restaurants" class="btn btn-primary">Home Page</a>
</form>
</div>
